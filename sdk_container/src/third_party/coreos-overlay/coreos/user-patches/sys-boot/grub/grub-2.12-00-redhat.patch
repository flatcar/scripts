+			"set gfxpayload=keep\n"
+			"insmod gzio\n"
+			"linux %s%s%s%s\n"
+			"%s%s",
+			savedefault ? "savedefault\n" : "",
+			GRUB_BOOT_DEVICE, clinux, options ? " " : "", options ? options : "",
