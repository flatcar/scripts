    </workaround>
    <resolution>
        <p>All Expat users should upgrade to the latest version:</p>
        
        <code>
          # emerge --sync
          # emerge --ask --oneshot --verbose ">=dev-libs/expat-2.4.9"
        </code>
    </resolution>
