    <affected>
        <package name="app-emulation/virtualbox" auto="yes" arch="*">
            <unaffected range="ge">6.1.36</unaffected>
            <vulnerable range="lt">6.1.36</vulnerable>
        </package>
        <package name="app-emulation/virtualbox-additions" auto="yes" arch="*">
